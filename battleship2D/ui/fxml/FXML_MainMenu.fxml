<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0"  xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/9.0.1" fx:controller="battleship2D.ui.fxmlController.FXML_MainMenuController">
    <children>
       <BorderPane fx:id="mainMenu" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">   
        <top>
          <Label text="Battleship2D" textAlignment="CENTER" textFill="#ff00a6" underline="true" BorderPane.alignment="CENTER">
             <font>
                <Font name="Comic Sans MS Bold" size="50.0" />
             </font>
          </Label>
       </top>
       <center>
          <VBox fx:id="verticalBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="50.0" BorderPane.alignment="CENTER">
             <children>
                <Button fx:id="soloButton" mnemonicParsing="false" onAction="#solo" prefHeight="50.0" prefWidth="150.0" text="Single Player" />
                <Button fx:id="multiButton" mnemonicParsing="false" onAction="#multi" prefHeight="50.0" prefWidth="150.0" text="Multi Player" />
             </children>
          </VBox>
       </center>
        </BorderPane>
    </children>
</AnchorPane>
